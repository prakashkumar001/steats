<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


                <EditText
                    android:id="@+id/res_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Restaurant Name"
                    android:paddingLeft="25dp"
                    android:layout_margin="10dp"
                    android:textSize="16dp"
                    android:textColor="#44413A"
                    android:background="@drawable/signup_input"
                    />

                <EditText
                    android:id="@+id/res_address"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Restaurant Address"
                    android:paddingLeft="25dp"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:textColor="#44413A"
                    android:background="@drawable/signup_input"
                    />

                <EditText
                    android:id="@+id/res_city"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Type your City"
                    android:paddingLeft="25dp"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:paddingRight="15dp"
                    android:drawableRight="@mipmap/color_location"
                    android:textColor="#44413A"
                    android:background="@drawable/signup_input"
                    />

                <EditText
                    android:id="@+id/res_state"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Type your State"
                    android:paddingLeft="25dp"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:paddingRight="15dp"
                    android:drawableRight="@mipmap/color_location"

                    android:textColor="#44413A"
                    android:background="@drawable/signup_input"
                    />


                <EditText
                    android:id="@+id/res_des"

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Description"
                    android:paddingLeft="25dp"
                    android:textSize="16dp"
                    android:layout_margin="10dp"

                    android:textColor="#44413A"
                    android:background="@drawable/signup_input"
                    />

            <EditText
                android:id="@+id/c_no"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Contact Number1"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:layout_margin="10dp"
                android:paddingRight="15dp"
                android:drawableRight="@mipmap/phone"

                android:textColor="#44413A"
                android:background="@drawable/signup_input"
                />

            <EditText
                android:id="@+id/c_tno"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Contact Number2"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:layout_margin="10dp"
                android:paddingRight="15dp"
                android:drawableRight="@mipmap/phone"

                android:textColor="#44413A"
                android:background="@drawable/signup_input"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:ems="15"
                        android:gravity="center"
                        android:layout_gravity="center|top"
                        android:text="Next"
                        android:layout_margin="10dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_bg"
                        />

                </LinearLayout>



            </LinearLayout>
    </ScrollView>

</LinearLayout>